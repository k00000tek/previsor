@startuml
title Диаграмма развертывания PreVisor

node "Client Device\n(Клиентская машина)" as client {
  component "PreVisor Server\n(Сервер приложения)" as server {
    component "Flask Web App"
    component "Monitoring Core"
  }
  database "SQLite" as db
}

cloud "Браузер" as browser
cloud "Telegram" as tg

cloud "External Services\n(Внешние сервисы)" as external{
  component "Telegram Bot API" as tgapi
  component "Threat Intelligence API" as ti
}

browser --> server : HTTP Requests
server --> db : SQL Queries
server --> external : External API Calls (HTTPS)
tg --> tgapi : Bot Commands

@enduml
